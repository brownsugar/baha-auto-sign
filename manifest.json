{
	"manifest_version": 3,
	"name": "巴哈自動簽到",
	"version": "0.4.1",
	"description": "當個簽到小達人",
	"icons": {
		"128": "assets/img/babi.png"
	},
	"permissions": [ "background", "tabs", "storage" ],
	"content_security_policy": "script-src 'self' https://*.google-analytics.com; object-src 'self'",
	"options_ui": {
		"page": "options.html#embed"
	},
	"action": {
		"default_icon": "assets/img/babi.png",
		"default_popup": "options.html#embed",
		"default_title": "巴哈自動簽到設定"
	},
	"background": {
		"service_worker": "assets/js/background.js"
	},
	"content_scripts": [{
		"run_at": "document_end",
		"matches": [ "*://*.gamer.com.tw/*" ],
		"css": [ "assets/css/content.css" ],
		"js": [ "vendor/jquery/jquery.min.js", "assets/js/content.js" ]
	}]
}